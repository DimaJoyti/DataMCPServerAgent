# Bright Data MCP Credentials
API_TOKEN=your_bright_data_api_token
BROWSER_AUTH=your_bright_data_browser_auth
WEB_UNLOCKER_ZONE=your_bright_data_web_unlocker_zone

# Model Configuration
MODEL_NAME=claude-3-5-sonnet-20240620
MODEL_PROVIDER=anthropic

# Memory Configuration
MEMORY_DB_PATH=agent_memory.db
MEMORY_TYPE=sqlite  # Options: sqlite, file, redis, mongodb

# Redis Configuration (if using Redis for memory)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MongoDB Configuration (if using MongoDB for memory)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=agent_memory

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Reinforcement Learning Configuration
RL_MODE=advanced  # Options: basic, advanced, multi_objective, hierarchical
RL_AGENT_TYPE=deep_rl  # Options: q_learning, policy_gradient, deep_rl
RL_LEARNING_RATE=0.01
RL_DISCOUNT_FACTOR=0.95
RL_EXPLORATION_RATE=0.1
RL_OBJECTIVES=user_satisfaction,task_completion,efficiency,accuracy
EXPLANATION_LEVEL=moderate  # Options: simple, moderate, detailed

# A/B Testing Configuration
RL_AB_TESTING_ENABLED=false
RL_AB_TESTING_EXPLORATION_RATE=0.2

# Hierarchical RL Configuration
RL_HIERARCHY_LEVELS=2  # Number of hierarchy levels
RL_TASK_DECOMPOSITION_ENABLED=true  # Whether to enable task decomposition
RL_OPTION_DISCOVERY_ENABLED=false  # Whether to enable automatic option discovery